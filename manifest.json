{
  "manifest_version": 2,
  "name": "Facebook - No Ads in News Feed",
  "short_name": "facebook-no-ads",
  "version": "1.3.0",

  "description": "It hides all sponsored ads namely Suggested Post or Suggested Page in News Feed on Facebook.",

  "content_scripts": [
    {
      "matches": ["*://*.facebook.com/*"],
      "js": ["index.js"],
			"run_at": "document_start"
    }
  ],

  "browser_action": {
    "default_icon": "icon128.png"
  },

  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  }

}